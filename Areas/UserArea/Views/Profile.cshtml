@model SocialMediaWeb.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h1>@Model.Username's Profile</h1>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Joined on:</strong> @Model.CreatedAt.ToShortDateString()</p>

    <h2>My Posts</h2>
    @if (Model.Posts.Any())
    {
        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5>@post.Title</h5>
                            <p>@post.Content</p>
                            <small>Posted on @post.CreatedAt.ToShortDateString()</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>You haven’t created any posts yet.</p>
    }
</div>
