@model IEnumerable<SocialMediaProject.Models.Forum>

@{
    ViewData["Title"] = "Browse Forums";
}

<div class="container mt-4">
    <h1>Forums</h1>
    <ul class="list-group">
        @foreach (var forum in Model)
        {
            <li class="list-group-item">
                <strong>@forum.Title</strong> - @forum.Description
                <span class="badge bg-secondary">@forum.Posts.Count posts</span>
            </li>
        }
    </ul>
</div>
