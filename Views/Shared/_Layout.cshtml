<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMediaWeb</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">SocialMediaWeb</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home", new {area = "" })">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Browsing", "Forum", new {area = "ForumArea" })">Forums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Profile", "User", new { area = "UserArea" })">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "User", new { area = "UserArea" })">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Register", "User", new { area = "UserArea" })">Register</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>