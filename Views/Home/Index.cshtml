@{
    ViewData["Title"] = "Home";
}

<div class="recent-posts">
    <h2>Recent Posts</h2>
    @if (ViewBag.RecentPosts != null && ViewBag.RecentPosts.Any())
    {
        foreach (var post in ViewBag.RecentPosts)
        {
            <div>
                <h3>@post.Title</h3>
                <p>@post.Content</p>
            </div>
        }
    }
    else
    {
        <p>No recent posts available.</p>
    }
</div>

<div class="popular-forums">
    <h2>Popular Forums</h2>
    @if (ViewBag.PopularForums != null && ViewBag.PopularForums.Any())
    {
        foreach (var forum in ViewBag.PopularForums)
        {
            <div>
                <h3>@forum.Title</h3>
                <p>@forum.Description</p>
            </div>
        }
    }
    else
    {
        <p>No popular forums available.</p>
    }
</div>
