@{
    ViewData["Title"] = "Home";
    var recentPosts = ViewBag.RecentPosts as List<SocialMediaWeb.Models.Post>;
    var popularForums = ViewBag.PopularForums as List<SocialMediaWeb.Models.Forum>;
}

<div class="recent-posts">
    <h2>Recent Posts</h2>
    @if (recentPosts != null && recentPosts.Any())
    {
        foreach (var post in recentPosts)
        {
            <div>
                <h3>@post.Title</h3>
                <p>@post.Content</p>
            </div>
        }
    }
    else
    {
        <p>No recent posts available.</p>
    }
</div>

<div class="popular-forums">
    <h2>Popular Forums</h2>
    @if (popularForums != null && popularForums.Any())
    {
        foreach (var forum in popularForums)
        {
            <div>
                <h3>@forum.Title</h3>
                <p>@forum.Description</p>
            </div>
        }
    }
    else
    {
        <p>No popular forums available.</p>
    }
</div>
